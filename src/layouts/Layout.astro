---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Site oficial Swibly" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Swibly</title>
  </head>
  <body>
    <main class="min-h-screen flex justify-center items-center p-8 max-w-2xl mx-auto">
      <slot />
    </main>
  </body>
</html>
